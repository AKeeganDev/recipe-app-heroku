<h1>Add Food</h1>

<%= form_with(model: @food, url: foods_path, data: { turbo: false }) do |form| %>  
  <div class="form-div">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter the food", class: 'form-field' %>
  </div>

   <div class="form-div">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, placeholder: "Enter the measurement unit", class: 'form-field' %>
  </div>

  <div class="form-div">
    <%= form.label :price %>
    <%= form.text_field :price, placeholder: "Enter the price", class: 'form-field' %>
  </div>    

  <div class="form-div">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, placeholder: "Enter the price", class: 'form-field' %>
  </div>    
    
  <%= form.submit 'Submit', class:"submit-button"%>
<% end %>
