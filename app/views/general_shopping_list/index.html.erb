<div class="user_recipes_list">
<h1>Shopping List</h1>

<div class="list_details">
  <p>Amount of food items to buy: <%=@foods.count%></p>
  <p>Total value of food needed: $ <%=@total_foods_value%></p>
</div>

<table id="foods">
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Total Price</th>
  </tr>
  <tr>
    <%@foods.each do |food|%>
      <tr>
        <td><%=food.name%></td>
        <td><%=food.quantity%></td>
        <td>$ <%=food.price * food.quantity%>0</td>
      </tr>
    <%end%>
  </tr> 
</table>
</div>